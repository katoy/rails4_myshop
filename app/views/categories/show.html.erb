<p id="notice"><%= notice %></p>

<p>
  <strong>Code:</strong>
  <%= @category.code %>
</p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>

<p>
  <strong>Parents:</strong>
  <%-
     strs = []
     @parents.each {|p| strs << p.name }
  -%>
  <%= strs.join(' ->') %>
</p>

<%= link_to 'Edit', edit_category_path(@category) %> |
